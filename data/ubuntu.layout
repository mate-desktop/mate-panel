[Toplevel top]
expand=true
orientation=top
size=24

[Toplevel bottom]
expand=true
orientation=bottom
size=24

[Object menu-bar]
object-type=menu-bar
toplevel-id=top
position=0
locked=true

[Object firefox]
locked=True
position=10
launcher-location=/usr/share/applications/firefox.desktop
